<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="view_bpe_sale_order_form">
	      	<field name="name">bpe.sale.form</field>
	      	<field name="model">sale.order</field>
	      	<field name="inherit_id" ref="sale.view_order_form"/>
	      	<field name="arch" type="xml">
                <xpath expr="//page[@string='Order Lines']" position="after">
						<page string="BPE">
							<group>
								<group>
									<field name="project_id" string="Project" context="{'partner_id':partner_invoice_id, 'manager_id': user_id, 'default_pricelist_id':pricelist_id, 'default_name':name, 'default_type': 'contract'}"  domain="[('type','in',['view','normal','contract'])]"/>
									<field name="rev" />
								</group>
								<group>
									<field name="subject" />
									<field name="refer" />
								</group>
							</group>
						</page>
                </xpath>

            </field>
        </record>


    </data>
</openerp>